<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.ProductPage">
    <ImageView />
    <TextField fx:id="score" layoutX="14.0" layoutY="174.0" onAction="#addScore" promptText="score this product 0 to 5" />
    <Button fx:id="addButton" layoutX="88.0" layoutY="144.0" onAction="#addToCart" text="add to cart" />
    <MenuButton fx:id="sellers" layoutX="14.0" layoutY="144.0" text="sellers" />
    <Button fx:id="backButton" layoutX="545.0" layoutY="14.0" onAction="#back" text="back" />

    <VBox alignment="bottom_right" layoutX="13.0" layoutY="204.0" spacing="10">
        <TextField fx:id="nameField" prefWidth="150" promptText="name" />
        <TextField fx:id="commentField" alignment="CENTER" prefHeight="200" prefWidth="150" promptText="comment" />
        <Button onAction="#addComment" text="Add" />
    </VBox>
    <HBox layoutX="14.0" layoutY="14.0">
        <VBox prefWidth="100">
            <Label text="name: " />
            <Label text="cost: " />
            <Label text="company: " />
            <Label text="average score: " />
            <Label text="inventory: " />
            <Label text="category: " />
            <Label text="description: " />
        </VBox>
        <VBox prefWidth="100">
            <Label fx:id="productName" text="shoe" />
            <Label fx:id="cost" text="80 000" />
            <Label fx:id="company" text="melli" />
            <Label fx:id="averageScore" text="4.5" />
            <Label fx:id="description" text="very well" />
            <Label fx:id="exist" text="23" />
            <Label fx:id="category" text="accessories" />
        </VBox>
    </HBox>
    <TableView fx:id="commentsTable" layoutX="279.0" layoutY="14.0">
      <columns>
         <TableColumn fx:id="commentsColumn" prefWidth="75.0" text="comment" />
         <TableColumn fx:id="nameColumn" prefWidth="75.0" text="name" />
      </columns>
    </TableView>
</AnchorPane>
