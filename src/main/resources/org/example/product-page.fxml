<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.collections.FXCollections?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.ProductPage">
    <TextField fx:id="comment" layoutX="300" layoutY="125" onAction="#addComment" text="comment" />
    <TextField fx:id="score" layoutX="300" layoutY="200" onAction="#addScore" text="score 1-5" />
    <Button fx:id="addButton" layoutX="300" layoutY="175" onAction="#addToCart" text="add to cart" />
    <MenuButton fx:id="sellers" layoutX="300" layoutY="150" text="sellers" />
    <TableView fx:id="comments">
        <columns>
            <TableColumn fx:id="aloneColumn" text="comments" prefWidth="250">
                <cellValueFactory><PropertyValueFactory property="firstName" />
                </cellValueFactory>
            </TableColumn>
        </columns>
        <items>
            <FXCollections fx:factory="observableArrayList">

            </FXCollections>
        </items>
        <sortOrder>
            <fx:reference source="aloneColumn"/>
        </sortOrder>
    </TableView>

</AnchorPane>
